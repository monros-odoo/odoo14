<odoo>
    <data>
<record id="add_fields_to_purchase_order" model="ir.ui.view">
        <field name="name">stock.return.request.form</field>
        <field name="model">stock.return.request</field>
        <field name="inherit_id" ref="stock_return_request.view_stock_return_request_form"/>
        <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="credit_note" invisible="1"/>
                </xpath>
            <xpath expr="//button[@name='action_validate']" position="after">

                <button
                        name="create_credit_note"
                        string="Create credit Note"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': ['|',('credit_note', '=', True),('state', '!=', 'done')]}"

                />

            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">

                <button
                            type="object"
                            name="get_credit_view"
                            class="oe_stat_button"
                            attrs="{'invisible':[('credit_count', '=', 0)]}"
                            icon="fa-list"
                        >
                            <field name="credit_count" widget="statinfo" string="Credit NOtes" />
                        </button>
            </xpath>

        </field>
    </record>
    </data>
</odoo>