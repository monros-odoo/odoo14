<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="customer_inv_report_wiz_form" model="ir.ui.view">
        <field name="name">Customer Invoice Report Wiz</field>
        <field name="model">totalcustomer.inv.report.wiz</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="from_date" required="1"/>
                        <field name="partner_ids" widget="many2many_tags"/>
                        <field name="user_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="to_date" required="1"/>
                        <field name="payment_state"/>
                        <field name="company_id" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="print_customer_inv_reports" string="Process"  type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_customer_inv_report_wiz" model="ir.actions.act_window">
        <field name="name">Customer Invoice Total Report</field>
        <field name="res_model">totalcustomer.inv.report.wiz</field>
        <field name="context">{}</field>
        <field name="view_id" ref="customer_inv_report_wiz_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="customer_inv_report_wiz_menu"
              name="Customer Invoice Total Report"
              parent="account.menu_finance_reports"
              action="action_customer_inv_report_wiz"
              sequence="1"/>
</odoo>

