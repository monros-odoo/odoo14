<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_template_inherit_power_dia_bc" model="ir.ui.view">
            <field name="name">product.template.inherit.power.dia.bc</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_general']/field[@name='categ_id']" position="after">
                    <field name="power"/>
                    <field name="dia"/>
                    <field name="bc"/>
                    <field name="qr_code" widget="image" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>