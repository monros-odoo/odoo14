<?xml version="1.0"?>
<odoo>
    <record id="view_invoice_report_wizard" model="ir.ui.view">
        <field name="name">invoice.report.wizard.form</field>
        <field name="model">invoice.report</field>
        <field name="arch" type="xml">
            <form string="Invoice Report">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <group>
                    <field name="partner_id"/>
                </group>
                <footer>
                    <button name="generate_invoice_report" string="Print" type="object" class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_report_invoice" model="ir.actions.act_window">
        <field name="name">Invoice Report</field>
        <field name="res_model">invoice.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_report_invoice"
              name="Invoice Report"
              action="action_report_invoice"
              parent="account.account_reports_management_menu"
              sequence="4"/>
</odoo>