<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_customer_sales_analysis_xls_view" model="ir.ui.view">
        <field name="name">sh.sale.analysis.xls</field>
        <field name="model">sh.sale.analysis.xls</field>
        <field name="arch" type="xml">
            <form string="Customer Sales Analysis">
                <group>
                    <field name="excel_file" invisible="True" />
                    <field name="file_name" filename="excel_file" invisible="True" />
                    <button name="download_report" string="Customer Sales Analysis" type="object" class="oe_highlight" />
                </group>
                <footer>
                    <button string="Close" class="oe_highlight" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cust_sales_analysis_xls" model="ir.actions.act_window">
        <field name="name">Customer Sales Analysis</field>
        <field name="view_id" ref="sh_customer_sales_analysis_xls_view" />
        <field name="view_mode">form</field>
        <field name="res_model">sh.sale.analysis.xls</field>
        <field name="target">new</field>
    </record>
</odoo>
