<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_sopos_details_report_wizard_form" model="ir.ui.view">
        <field name="name">sh.sale.pos.details.report.wizard.form</field>
        <field name="model">sh.sale.pos.details.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Sale and POS Details">
                <group>
                    <group>
                        <field name="start_date" />
                        <field name="state" />
                    </group>
                    <group>
                        <field name="end_date" />
                        <field name="config_ids" options="{'no_create': True}" widget="many2many_tags" />
                    </group>
                </group>

                <group>
                    <field name="team_ids" options="{'no_create': True}" widget="many2many_tags" />
                    <field name="company_ids" options="{'no_create': True}" widget="many2many_tags" groups="base.group_multi_company" />
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary" />
                    <button name="print_sale_pos_detail_xls_report" string="Print Xls" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="sh_sopos_details_report_action" model="ir.actions.act_window">
        <field name="name">Sales and POS Details Report</field>
        <field name="res_model">sh.sale.pos.details.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="sh_sopos_details_report_menuitem" action="sh_sopos_details_report_action" parent="sale.menu_sale_report" groups="sales_team.group_sale_salesman_all_leads" sequence="99" />

    <menuitem id="sh_sopos_details_report_menuitem_pos" action="sh_sopos_details_report_action" parent="point_of_sale.menu_point_rep" groups="point_of_sale.group_pos_manager" sequence="99" />
</odoo>
