<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sh_sales_product_profit_wizard" model="ir.ui.view">
		<field name="name">sh.sale.product.profit.wizard</field>
		<field name="model">sh.sale.product.profit.wizard</field>
		<field name="arch" type="xml">
			<form string="Sales Product Profit">
				<group>
					<group>
						<field name="sh_start_date" />
						<field name="sh_partner_ids" widget="many2many_tags" attrs="{'invisible':[('report_by','=','product')]}" />
						<field name="report_by" widget="radio" />
						<field name="sh_session_id" />
					</group>
					<group>
						<field name="sh_end_date" />
						<field name="sh_product_ids" widget="many2many_tags" attrs="{'invisible':[('report_by','=','customer')]}" />
						<field name="company_ids" widget="many2many_tags" options="{'no_create': True}" groups="base.group_multi_company" />
					</group>
				</group>
				<footer>
					<button name="print_report" string="Print" class="oe_highlight" type="object" icon="fa-print" />
					or
					<button name="print_xls_report" string="Print In XLS" class="oe_highlight" type="object" icon="fa-file-excel-o" />
					or
					<button string="Cancel" class="btn-default" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="action_sales_product_profit" model="ir.actions.act_window">
		<field name="name">Sales Product Profit</field>
		<field name="res_model">sh.sale.product.profit.wizard</field>
		<field name="view_id" ref="sh_sales_product_profit_wizard" />
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
	
	<menuitem id="menu_sales_product_profit" name="Sales Product Profit" parent="sale.menu_sale_report" action="action_sales_product_profit" />
	<menuitem id="menu_sale_pos_product_profit" name="Sales Product Profit" parent="point_of_sale.menu_point_rep" action="action_sales_product_profit" />
</odoo>