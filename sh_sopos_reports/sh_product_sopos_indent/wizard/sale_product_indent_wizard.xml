<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sh_sale_product_indent_wizard" model="ir.ui.view">
		<field name="name">sh.sale.product.indent.wizard</field>
		<field name="model">sh.sale.product.indent.wizard</field>
		<field name="arch" type="xml">
			<form string="Sales Product Indent">
				<group>
					<group>
						<field name="sh_start_date" />
						<field name="sh_partner_ids" widget="many2many_tags" />
						<field name="sh_status_so" widget="radio" />
						<field name="sh_session_id" />
					</group>
					<group>
						<field name="sh_end_date" />
						<field name="sh_category_ids" widget="many2many_tags" />
						<field name="sh_status_pos" widget="radio" />
						<field name="company_ids" widget="many2many_tags" options="{'no_create': True}" groups="base.group_multi_company" />
					</group>
				</group>
				<footer>
					<button name="print_report" string="Print" class="oe_highlight" type="object" icon="fa-print" />
					or
					<button name="print_xls_report" string="Print In XLS" class="oe_highlight" type="object" icon="fa-file-excel-o" />
					or
					<button string="Cancel" class="btn-default" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="action_sale_product_indent" model="ir.actions.act_window">
		<field name="name">Sales Product Indent</field>
		<field name="res_model">sh.sale.product.indent.wizard</field>
		<field name="view_id" ref="sh_sale_product_indent_wizard" />
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<menuitem id="menu_sale_product_indent" name="Sales Product Indent" parent="sale.menu_sale_report" action="action_sale_product_indent" />
	<menuitem id="menu_sale_pos_product_indent" name="Sales Product Indent" parent="point_of_sale.menu_point_rep" action="action_sale_product_indent" />
</odoo>